<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nwlnbl.laravel.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/img"
        android:id="@+id/relativeLayout11">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/txtNama"
        android:text="nawalnabila20@gmail.com"
        android:textStyle="italic"
        android:textSize="18sp"
        android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/circleImageView"
        android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/sea"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimary"
            android:id="@+id/circleImageView"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:background="@drawable/border_style"
        android:id="@+id/relativeLayout10"
        android:gravity="center"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/relativeLayout11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp">

        <Button
            android:layout_width="310dp"
            android:layout_height="65dp"
            android:text="Belanjaanku"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:gravity="center"
            android:id="@+id/btn1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/mycart"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:id="@+id/imageView4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:background="@drawable/border_style"
        android:id="@+id/relativeLayout13"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/relativeLayout12"
        android:layout_alignLeft="@+id/relativeLayout12"
        android:layout_alignStart="@+id/relativeLayout12">

        <Button
            android:layout_width="310dp"
            android:layout_height="65dp"
            android:text="Logout"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:gravity="center"
            android:id="@+id/btn3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/logout"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:background="@drawable/border_style"
        android:id="@+id/relativeLayout12"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/relativeLayout10"
        android:layout_alignLeft="@+id/relativeLayout10"
        android:layout_alignStart="@+id/relativeLayout10">

        <Button
            android:layout_width="310dp"
            android:layout_height="65dp"
            android:text="Bantuan"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:gravity="center"
            android:id="@+id/btn2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/help"
            android:id="@+id/imageView5"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />

    </RelativeLayout>

</RelativeLayout>
